<h1>おさんぽ記録を編集</h1>

<%= form_with model: @tweet, local: true do |f| %>

  <% if @tweet.images.attached? %>
    <p>現在の写真:</p>
    <% @tweet.images.each do |image| %>
      <div class="edit-image-block">
        <%= image_tag image.variant(resize_to_limit: [150,150]).processed %><br>
        <label>
          <%= check_box_tag "tweet[remove_image_ids][]", image.id %>
          この写真を削除
        </label>
      </div>
    <% end %>
  <% end %>

  <!-- Subject -->
  <div class="field">
    <%= f.label :subject, "タイトル" %>
    <%= f.text_field :subject %>
  </div>

  <!-- Date -->
  <div class="field">
    <%= f.label :activity_date, "日付" %>
    <%= f.date_field :activity_date %>
  </div>

  <!-- Text -->
  <div class="field">
    <%= f.label :text, "内容" %>
    <%= f.text_area :text %>
  </div>

  <!-- Images -->
  <div class="field">
    <%= f.label :images, "写真（追加する場合）" %><br>
    <%= f.file_field :images, name: "tweet[images][]", accept: "image/*" %><br>
    <%= f.file_field :images, name: "tweet[images][]", accept: "image/*" %><br>
    <%= f.file_field :images, name: "tweet[images][]", accept: "image/*" %><br>
  </div>

  <%= f.submit "更新する", class: "btn-edit" %>

<% end %>

<br>
<%= link_to "戻る", tweet_path(@tweet) %>
